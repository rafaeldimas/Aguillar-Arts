                                    </div>
                                    <div class="subtitle-portfolio">
                                        <a href="{{ cliente.url }}">
                                            <h3>{{ cliente.nome }}</h3>
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </section>
            </article>

        </div>
    </div>
</section>

