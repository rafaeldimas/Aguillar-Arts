{% include 'header.phtml'%}

<section class="row">
    <div class="col-xs-12 col-md-12">
        <div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#sites" aria-controls="sites" role="tab" data-toggle="tab">Web Sites</a></li>
                <li role="presentation"><a href="#cartoes" aria-controls="cartoes" role="tab" data-toggle="tab">Cart√µes</a></li>
                <li role="presentation"><a href="#midiasocial" aria-controls="midiasocial" role="tab" data-toggle="tab">Midia Social</a></li>
                <li role="presentation"><a href="#marketingtradicional" aria-controls="marketingtradicional" role="tab" data-toggle="tab">Marketing Tradicional</a></li>
            </ul>

            <!-- Tab panes -->
            <article class="tab-content">
                <section role="tabpanel" class="tab-pane active" id="sites">
                    <div class="portfolio">
                        {% for cliente in portfolio %}
                            {% if cliente.categoria == 1 %}
                                <div class="item-portfolio">
                                    <div class="img-portfolio">
                                        <a href="{{ cliente.url }}" class="btn btn-danger">View</a>
                                        <img src="{{ cliente.url_imagem }}">
                                    </div>
                                    <div class="subtitle-portfolio">
                                        <a href="{{ cliente.url }}">
                                            <h3>{{ cliente.nome }}</h3>
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </section>
                <section role="tabpanel" class="tab-pane" id="cartoes">
                    <div class="portfolio">
                        {% for cliente in portfolio %}
                            {% if cliente.categoria == 2 %}
                                <div class="item-portfolio">
                                    <div class="img-portfolio">
                                        <a href="{{ cliente.url }}" class="btn btn-danger">View</a>
                                        <img src="{{ cliente.url_imagem }}">
                                    </div>
                                    <div class="subtitle-portfolio">
                                        <a href="{{ cliente.url }}">
                                            <h3>{{ cliente.nome }}</h3>
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </section>
                <section role="tabpanel" class="tab-pane" id="midiasocial">
                    <div class="portfolio">
                        {% for cliente in portfolio %}
                            {% if cliente.categoria == 3 %}
                                <div class="item-portfolio">
                                    <div class="img-portfolio">
                                        <a href="{{ cliente.url }}" class="btn btn-danger">View</a>
                                        <img src="{{ cliente.url_imagem }}">
                                    </div>
                                    <div class="subtitle-portfolio">
                                        <a href="{{ cliente.url }}">
                                            <h3>{{ cliente.nome }}</h3>
                                        </a>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </section>
                <section role="tabpanel" class="tab-pane" id="marketingtradicional">
                    <div class="portfolio">
                        {% for cliente in portfolio %}
                            {% if cliente.categoria == 4 %}
                                <div class="item-portfolio">
                                    <div class="img-portfolio">
                                        <a href="{{ cliente.url }}" class="btn btn-danger">View</a>
